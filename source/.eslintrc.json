{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "ignorePatterns": ["/*.js", "/docs/**/*.js"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": ["error", "always"],
        "brace-style": ["error", "1tbs"],
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "no-prototype-builtins": "off",
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": ["error", "always"]
    }
}
